<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="v_education.ResPartnerKanbanView.Buttons" t-inherit="web.KanbanView.Buttons" owl="1">
        <xpath expr="//t[@t-if='canCreate']" position="after">
            <button class="btn btn-primary" t-on-click="openSaleView">
                View Sales Orders
            </button>
            <button class="btn btn-secondary ms-2">
                View Invoices
            </button>
            <button class="btn btn-primary ms-2">
                View Meeting
            </button>
        </xpath>
    </t>

    <t t-name="v_education.ResPartnerKanbanView" t-inherit="web.KanbanView" owl="1">
        <xpath expr="//t[@t-component='props.Renderer']" position="before">
            <div class="mb-3">
                <h2>Customer Locations</h2>
            </div>
        </xpath>
        <xpath expr="//Layout" position="attributes">
            <attribute name="class" separator=" " add="o_view_sample_data d-flex"/>
        </xpath>
    </t>
</templates>